[user]
  # These values are set in ~/.gitconfig_local

[include]
  path = ~/.gitconfig_local

[color]
	ui = true
[commit]
	template = ~/.stCommitMsg
[core]
	editor = code --wait
	autocrlf = false
	ignorecase = false
	quotepath = false
	safecrlf = true
	excludesfile = /Users/shota/.gitignore_global
[credential]
	helper = osxkeychain
[init]
	defaultBranch = main
[pull]
	rebase = false
[push]
	default = simple
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
    line-numbers = true
    side-by-side = true

[interactive]
    diffFilter = delta --color-only
